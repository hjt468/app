page {
  background: linear-gradient(to bottom, #FFECB3, #FFE082);
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.result-card {
  background: rgba(255, 255, 255, 0.9);
  padding: 60rpx;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  width: 80%;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.score {
  font-size: 72rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 40rpx;
}

.high-score {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 60rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
}

.btn-group {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  width: 100%;
}

.btn {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
}

.restart-btn {
  background: linear-gradient(to right, #4A90E2, #357ABD);
  color: white;
}

.home-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #666;
  border: 2rpx solid #ddd;
} 