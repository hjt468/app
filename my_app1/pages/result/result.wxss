.result-card {
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 60rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 40rpx;
}

.score {
  font-size: 40rpx;
  color: #F5A623;
  margin-bottom: 20rpx;
}

.high-score {
  font-size: 32rpx;
  color: #666;
}

.button-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

button {
  width: 80% !important;
  margin: 20rpx 0;
} 