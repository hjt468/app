page {
  padding: 0 !important;
  margin: 0 !important;
  width: 100vw !important;
  min-height: 100vh;
  background: linear-gradient(to bottom, #FFECB3, #FFE082);
  box-sizing: border-box !important;
}

.container {
  padding: 0 !important;
  margin: 0 !important;
  box-sizing: border-box !important;
}

.game-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  z-index: 100;
  padding: env(safe-area-inset-top) 30rpx 20rpx;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.game-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4A90E2;
}

.exit-btn {
  position: fixed;
  top: 40rpx;
  right: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #666;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.game-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 30rpx 240rpx;
  box-sizing: border-box;
}

.word-card {
  background: rgba(255, 255, 255, 0.9);
  padding: 60rpx;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 60rpx;
  width: 90%;
  text-align: center;
}

.word {
  font-size: 72rpx;
  font-weight: bold;
  color: #333;
}

.game-info {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin-bottom: 60rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 30rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.timer, .score {
  font-size: 36rpx;
  color: #666;
  font-weight: bold;
}

.game-footer {
  position: fixed;
  left: 0 !important;
  bottom: 0 !important;
  width: 100vw !important;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  z-index: 200;
  padding: 0 !important;
  margin: 0 !important;
  box-sizing: border-box !important;
}

.control-area {
  display: flex;
  width: 100vw !important;
  height: 120rpx;
  padding: 0 !important;
  margin: 0 !important;
  box-sizing: border-box !important;
}

.control-btn {
  flex: 1;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
  margin: 0 !important;
  border-radius: 0 !important;
  box-shadow: none !important;
  box-sizing: border-box !important;
}

.control-btn.correct {
  background: linear-gradient(to right, #43e97b, #38f9d7) !important;
}

.control-btn.skip {
  background: linear-gradient(to right, #f7971e, #ffd200) !important;
}

.control-text {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.18);
  letter-spacing: 2rpx;
}

.game-controls {
  padding: 0 !important;
  margin: 0 !important;
  width: 100vw !important;
  left: 0 !important;
  box-sizing: border-box !important;
}

.control-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
} 