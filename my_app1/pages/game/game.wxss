page {
  background: linear-gradient(135deg, #FFE0B2 0%, #FFCC80 100%);
}

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFE0B2 0%, #FFCC80 100%);
  display: flex;
  flex-direction: column;
  position: relative;
}

.game-header {
  padding: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.header-center {
  flex: 1;
  display: flex;
  justify-content: center;
}

.game-info {
  display: flex;
  gap: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 30rpx 60rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.timer, .score {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.timer-label, .score-label {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.timer-value, .score-value {
  font-size: 56rpx;
  font-weight: bold;
  color: #E65100;
}

.exit-btn {
  position: fixed;
  right: 30rpx;
  top: 30rpx;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  color: #E65100;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(230, 81, 0, 0.3);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.exit-btn:active {
  background: rgba(255, 255, 255, 0.8);
}

.game-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  margin-top: 80rpx;
}

.word-card {
  background: rgba(255, 255, 255, 0.98);
  padding: 80rpx;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  width: 90%;
  text-align: center;
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  margin-bottom: 60rpx;
}

.word {
  font-size: 96rpx;
  font-weight: bold;
  color: #333;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.game-footer {
  padding: 0;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
}

.control-area {
  display: flex;
  height: 200rpx;
  border-radius: 30rpx 30rpx 0 0;
  overflow: hidden;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  width: 100%;
}

.left-area, .right-area {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.left-area {
  background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%);
}

.right-area {
  background: linear-gradient(135deg, #FF5722 0%, #E64A19 100%);
}

.control-text {
  font-size: 56rpx;
  color: white;
  font-weight: bold;
}

.control-hint {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

.left-area:active, .right-area:active {
  transform: scale(0.98);
  opacity: 0.9;
} 