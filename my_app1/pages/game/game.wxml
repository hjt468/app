<view class="container">
  <view class="game-header">
    <view class="header-content">
      <view class="game-title">疯狂猜词</view>
      <view class="exit-btn" bindtap="exitGame">
        <text>退出</text>
      </view>
    </view>
  </view>

  <view class="game-content">
    <view class="word-card">
      <text class="word">{{currentWord}}</text>
    </view>

    <view class="game-info">
      <view class="info-item">
        <text class="info-label">剩余时间</text>
        <text class="info-value">{{timeLeft}}s</text>
      </view>
      <view class="info-item">
        <text class="info-label">当前得分</text>
        <text class="info-value">{{score}}</text>
      </view>
    </view>
  </view>

  <view class="game-controls">
    <view class="control-area">
      <view class="control-btn correct" bindtap="handleCorrect">
        <text class="control-text">猜对了</text>
      </view>
      <view class="control-btn skip" bindtap="handleSkip">
        <text class="control-text">跳过</text>
      </view>
    </view>
  </view>
</view> 