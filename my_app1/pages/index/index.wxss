/**index.wxss**/
page {
  background: linear-gradient(to bottom, #FFECB3, #FFE082);
  min-height: 100vh;
}

.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-top: 60rpx;
  margin-bottom: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 60rpx;
}

.high-score-card {
  background: rgba(255, 255, 255, 0.95);
  padding: 40rpx 80rpx;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  backdrop-filter: blur(10px);
}

.high-score-label {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.high-score-value {
  font-size: 80rpx;
  font-weight: bold;
  color: #4A90E2;
}

.btn-group {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  width: 100%;
  max-width: 600rpx;
}

.start-btn, .rules-btn {
  background: #FFFFFF;
  padding: 30rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.start-btn {
  width: 80%;
  height: 100rpx;
  background: linear-gradient(to right, #4A90E2, #357ABD);
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 12rpx rgba(74, 144, 226, 0.3);
}

.rules-btn {
  background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%);
}

.btn-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.footer {
  text-align: center;
  padding: 40rpx 0;
}

.footer-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.start-btn:active, .rules-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.high-score {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}
