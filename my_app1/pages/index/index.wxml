<!--index.wxml-->
<navigation-bar title="Weixin" back="{{false}}" color="black" background="#FFF"></navigation-bar>
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="header">
      <view class="title">疯狂猜词</view>
      <view class="subtitle">趣味猜词，欢乐无限</view>
    </view>

    <view class="content">
      <view class="high-score-card">
        <view class="high-score-label">历史最高分</view>
        <view class="high-score-value">{{highScore}}</view>
      </view>

      <view class="btn-group">
        <view class="start-btn" bindtap="startGame">
          <text class="btn-text">开始游戏</text>
        </view>
        <view class="rules-btn" bindtap="showRules">
          <text class="btn-text">游戏规则</text>
        </view>
      </view>
    </view>

    <view class="footer">
      <text class="footer-text">快乐游戏，快乐生活</text>
    </view>
  </view>
</scroll-view>
