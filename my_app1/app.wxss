/**app.wxss**/
page {
  background-color: #F5F5F5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 20rpx;
}

.btn-primary {
  background-color: #4A90E2;
  color: white;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  margin: 20rpx 0;
  font-size: 32rpx;
  border: none;
}

.btn-secondary {
  background-color: #F5A623;
  color: white;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  margin: 20rpx 0;
  font-size: 32rpx;
  border: none;
}

.card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
} 
